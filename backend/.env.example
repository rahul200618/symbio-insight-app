# MongoDB Connection
# For local MongoDB (default - directConnection=true required for standalone instances):
MONGODB_URI=mongodb://localhost:27017/symbio?directConnection=true

# For MongoDB Atlas (alternative):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/symbio?retryWrites=true&w=majority

# Server Configuration
# Port for the backend server
PORT=3002

# Frontend URL for CORS
# Update this if your frontend runs on a different port
FRONTEND_URL=http://localhost:5173

# Node Environment
# Options: development, production, test
NODE_ENV=development

# Google Gemini AI API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
